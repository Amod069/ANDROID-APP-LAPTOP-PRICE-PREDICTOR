<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:paddingBottom="2dp"

    >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"

          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          >

        <Spinner

            android:id="@+id/company_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"


            />
        <Spinner
            android:id="@+id/type"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="50dp"
            />
          <Spinner
          android:id="@+id/ram"
          android:layout_width="300dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="25dp"
          android:layout_marginLeft="50dp"

              />

          <EditText
              android:id="@+id/weight"
              android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="50dp"
              android:layout_marginTop="25dp"
              android:hint="Enter Laptop Weight (in KG)"
              android:inputType="numberDecimal"
              />
          <Spinner
              android:id="@+id/touch"
              android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="25dp"
              android:layout_marginLeft="50dp"

              />
          <Spinner
              android:id="@+id/ips"
              android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="25dp"
              android:layout_marginLeft="50dp"

              />

          <EditText
              android:id="@+id/screensize"
              android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="25dp"
              android:layout_marginLeft="50dp"
              android:hint="Enter Screen Size in Inches"
              android:inputType="numberDecimal"
              />
          <Spinner
              android:id="@+id/screen_resolution"
              android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="25dp"
              android:layout_marginLeft="50dp"

              />
          <Spinner
              android:id="@+id/processor_brand"
              android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="25dp"
              android:layout_marginLeft="50dp"

              />
          <Spinner
              android:id="@+id/hdd"
              android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="25dp"
              android:layout_marginLeft="50dp"

              />
          <Spinner
              android:id="@+id/ssd"
              android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="25dp"
              android:layout_marginLeft="50dp"

              />
          <Spinner
              android:id="@+id/graphic_card"
              android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="25dp"
              android:layout_marginLeft="50dp"

              />
          <Spinner
              android:id="@+id/os"
              android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="25dp"
              android:layout_marginLeft="50dp"

              />
        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="SUBMIT"
            />
        <TextView
            android:id="@+id/predicted_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"

            />





      </LinearLayout>
</ScrollView>